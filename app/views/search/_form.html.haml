= form_for @search, url: '/search', method: 'GET' do |f|
  - if @search.errors.any?
    #error_explanation
      %h2= "#{pluralize(@search.errors.count, "error")} prohibited this match_worker from being saved:"
      %ul
        - @search.errors.full_messages.each do |msg|
          %li= msg
  = f.label(:skills, 'Select skills:')
  %br
  = f.select(:skills, options_for_select(skills_options, @search.skills), {}, {multiple: true})
  .actions
    = f.submit 'Search'
